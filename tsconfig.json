{
    "compilerOptions": {
        "moduleResolution": "node",
        "outDir": "dist",
        "module": "ESNext",
        "lib": ["dom", "esnext"],
        "jsx": "preserve",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist", "example", "test"]
}
